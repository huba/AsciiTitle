#!/usr/bin/env ruby
require 'ascii_title'
include AsciiTitle

if ARGV[0]
	filepath = ARGV[0]
else
	filepath = "#{File.dirname(__FILE__)}/3d_northeast.xml"
end

puts filepath

fontFace = FontFaceUtils.loadXml(filepath)

begin
	while true
		#puts "\e[H\e[2J"
		time = Time.new
		puts ("    Time:\n #{time.hour}:#{time.min}:#{time.sec}").ascii_title(font_face)
		sleep(1)
	end
rescue
	
end
